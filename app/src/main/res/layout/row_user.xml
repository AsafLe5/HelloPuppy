<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:id="@+id/UserPicture"
            android:src="@drawable/ic_profile"
            android:minWidth="150dp"
            android:gravity="center"
            android:minHeight="150dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ivStyle_Circle"
            android:layout_alignParentTop="true"/>
        <LinearLayout
            android:id="@+id/linear_layout_name"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp">
        <TextView
            android:id="@+id/userName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name:"
            android:layout_toEndOf="@id/UserPicture"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/actualUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"

            android:layout_toEndOf="@+id/userName"
            android:text="the user name"
            android:textSize="18sp"/>
        </LinearLayout>




        <LinearLayout
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_below="@+id/linear_layout_name">
        <TextView
            android:id="@+id/dogsName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dog's Name:"
            android:layout_below="@id/userName"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/actualDogName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/dogsName"
            android:text="the dog's name"
            android:textSize="18sp" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>

