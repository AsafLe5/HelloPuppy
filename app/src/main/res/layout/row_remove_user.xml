<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector"
        android:layout_marginBottom="5dp"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:id="@+id/UserPicture"
            android:src="@drawable/ic_profile"
            android:minWidth="150dp"
            android:gravity="center"
            android:minHeight="150dp"
            android:layout_marginStart="5dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ivStyle_Circle"
            android:layout_alignParentTop="true"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="80dp"
            android:id="@+id/linear_layout_name">

        <TextView
            android:id="@+id/userName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name:"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/actualUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="name"
            android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginStart="80dp"
            android:id="@+id/linear_layout_dog_name"
            android:layout_below="@+id/linear_layout_name">

        <TextView
            android:id="@+id/dogsName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dog:"
            android:layout_weight="1"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/actualDogName"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="dog's name"
            android:textSize="16sp" />
        </LinearLayout>
        <ImageButton
            android:id="@+id/remove_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:layout_marginStart="285dp"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_remove_user">
        </ImageButton>

    </RelativeLayout>

</androidx.cardview.widget.CardView>

