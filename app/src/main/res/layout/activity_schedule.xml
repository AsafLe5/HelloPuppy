<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Schedule">


    <Button
        android:id="@+id/choose_shifts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="520dp"
        android:text="Choose next week shifts" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This week shifts"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:id="@+id/text_title"
        android:layout_marginTop="15dp"/>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_title">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aren't available yet, please wait until Tuesday at 8pm"
        android:textSize="30dp"
        android:visibility="gone"
        android:id="@+id/not_ready_text"/>
    </LinearLayout>

    <TableLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:id="@+id/table_layout"
        >

        <!-- Table Heading -->
        <TableRow
            android:background="@color/BlueViolet">

            <TextView android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Day"
                android:textColor="@color/white"
                android:padding="10sp"
                android:textSize="14sp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                />
            <TextView android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Person"
                android:textColor="@color/white"
                android:padding="10sp"
                android:textSize="14sp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                />

        </TableRow>

        <TableRow>
            <TextView android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sunday"
                android:padding="10sp"
                android:textSize="12sp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:id="@+id/row1_day"
                />
            <TextView android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="row1Age"
                android:padding="10sp"
                android:textSize="12sp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:id="@+id/row1_name"
                />
        </TableRow>
        <TableRow>
            <TextView android:layout_width="0dp"
