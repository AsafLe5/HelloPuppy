                android:textSize="12sp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:id="@+id/row3_name"
                />
        </TableRow>
        <TableRow>
            <TextView android:layout_width="0dp"
                android:layout_height="wrap_content"
