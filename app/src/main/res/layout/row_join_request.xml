<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/selector">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:id="@+id/UserPicture"
            android:src="@drawable/ic_profile"
            android:minWidth="150dp"
            android:gravity="center"
            android:minHeight="150dp"
            android:layout_marginStart="5dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ivStyle_Circle"
            android:layout_alignParentTop="true"/>



        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/linear_layout_name"
            android:layout_marginTop="8dp"
            android:layout_marginStart="80dp"
            >
            <TextView
                android:id="@+id/userName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Name:"
                android:layout_toEndOf="@id/UserPicture"
                android:textSize="16sp"/>
        <TextView
            android:id="@+id/actualUserName"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/userName"
            android:singleLine="true"
            android:text="the user name"
            android:textSize="15sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_layout_name"
            android:layout_marginStart="80dp"
            >
        <TextView
            android:id="@+id/Availability"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Available:"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/actualAvailability"
            android:layout_width="0dp"
            android:layout_height="31dp"
            android:layout_weight="5"
            android:text="availability"
            android:textSize="15sp" />
        </LinearLayout>
        <Button
            android:id="@+id/accept"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_check"
            android:layout_marginStart="295dp"
            android:layout_centerVertical="true"
            >
        </Button>

        <Button
            android:id="@+id/deny"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_disagree"
            android:layout_marginStart="320dp"
            android:layout_centerVertical="true"
            >
        </Button>

    </RelativeLayout>

</androidx.cardview.widget.CardView>




