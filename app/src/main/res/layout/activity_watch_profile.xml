<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WatchProfile">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="409dp"
        android:layout_height="253dp"
        app:srcCompat="@drawable/ic_profile" />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name_text"
        android:layout_below="@+id/imageView" />

    <TextView
        android:id="@+id/user_gender_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user_gender_text"
        android:layout_below="@+id/name_text"
         />

    <TextView
        android:id="@+id/age_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="age_text"
        android:layout_below="@+id/user_gender_text" />

    <TextView
        android:id="@+id/location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="location_text"
        android:layout_below="@+id/age_text" />

    <TextView
        android:id="@+id/availability_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="availability_text"
        android:layout_below="@+id/location_text" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="116dp"
        android:layout_height="102dp"
        android:layout_below="@+id/availability_text"
        app:srcCompat="@drawable/ic_dog_photo"
        android:layout_centerHorizontal="true"
         />

    <TextView
        android:id="@+id/dog_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dog_name_text"
        android:layout_below="@+id/imageView2" />

    <TextView
        android:id="@+id/dog_gender_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dog_gender_text"
        android:layout_below="@+id/dog_name_text"
         />

    <TextView
        android:id="@+id/dog_age_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dog_age_text"
        android:layout_below="@+id/dog_gender_text" />

    <TextView
        android:id="@+id/is_vaccinated_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="is_vaccinated_text"
        android:layout_below="@+id/dog_age_text"
        />

    <TextView
        android:id="@+id/is_castrated_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="is_castrated_text"
        android:layout_below="@+id/is_vaccinated_text" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/purple_500"
        app:itemIconTint="@drawable/serlector"
        app:itemTextColor="@drawable/serlector"
        app:menu="@menu/menu" />

</RelativeLayout>